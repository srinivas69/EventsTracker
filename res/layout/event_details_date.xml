<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_items_bg" >

    <ImageView
        android:id="@+id/eveDateImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/black"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/eveDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/eveDateImg"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/eveDateImg"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/secondary_text_light" />

    <TextView
        android:id="@+id/eveTypTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eveDateImg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="free"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/event_type_color" />

    <TextView
        android:id="@+id/eveTimTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eveDateTv"
        android:layout_below="@+id/eveDateTv"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/secondary_text_light" />

</RelativeLayout>